<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plan_lekcji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jakubkorsak.puszkin.PlanLekcji">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Plan Lekcji"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/l"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/horiz">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <Button
                        android:text="@string/_1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/klasa1"
                        android:tag="1" />
                    <Button
                        android:text="@string/_2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/klasa7"
                        android:tag="7"/>
                    <Button
                        android:text="@string/_3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/klasa13"
                        android:tag="13" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:text="@string/_1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/klasa2"
                        android:tag="2"/>
                    <Button
                        android:text="@string/_2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/klasa8"
                        android:tag="8"/>
                    <Button
                        android:text="@string/_3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/klasa14"
                        android:tag="14" />
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="@string/_1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa3"
                    android:tag="3" />
                <Button
                    android:text="@string/_2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/klasa9"
                    android:tag="9"/>
                <Button
                    android:text="@string/_3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa15"
                    android:tag="15" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="@string/_1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa4"
                    android:tag="4"/>
                <Button
                    android:text="@string/_2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/klasa10"
                    android:tag="10"/>
                <Button
                    android:text="@string/_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa16"
                    android:tag="16"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="@string/_1e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa5"
                    android:tag="5" />
                <Button
                    android:text="@string/_2e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/klasa11"
                    android:tag="11"/>
                <Button
                    android:text="@string/_3e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa17"
                    android:tag="17"
                    android:contextClickable="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="@string/_1f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa6"
                    android:tag="6" />
                <Button
                    android:text="@string/_2f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/klasa12"
                    android:tag="12"/>
                <Button
                    android:text="@string/_3f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/klasa18"
                    android:tag="18" />
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/horiz">

        <Button
            android:text="Nauczyciele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nauczyciele"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:text="Gabinety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gabinety"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>


</RelativeLayout>
