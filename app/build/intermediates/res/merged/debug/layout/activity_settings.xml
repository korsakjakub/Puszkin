<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jakubkorsak.puszkin.Settings">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Ustawienia"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <Button
        android:text="@string/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:text="@string/usun_wszystkie_zapisane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:id="@+id/delete_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/twoja_klasa"
        android:layout_alignLeft="@+id/delete_all"
        android:layout_alignStart="@+id/delete_all"
        android:id="@+id/editText"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="@string/twoja_klasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoja_klasa"
        android:layout_below="@+id/delete_all"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:paddingTop="20dp" />

    <Button
        android:text="@string/zapis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:id="@+id/zapis_button" />


    <TextView
        android:text="@string/stan_zapisow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stan_plików"
        android:layout_below="@id/editText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stan_plików"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/twoja_klasa_image" />
            <TextView
                android:text="@string/twoja_klasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoja_klasa_textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/ostatnia_klasa_image" />
            <TextView
                android:text="@string/ostatnio_wybrana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ostatnia_klasa_textView" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
