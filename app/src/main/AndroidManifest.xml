        <activity
            android:name=".PlainView"
            android:theme="@style/PlainViewTheme" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Nauczyciele" />
        <activity android:name=".Gabinety" />
        <activity android:name=".InnePlany"
